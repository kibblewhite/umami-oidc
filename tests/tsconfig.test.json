{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/lib/*": ["./src/lib/*"]
    }
  },
  "include": ["tests/**/*.ts", "src/**/*.ts"]
}
